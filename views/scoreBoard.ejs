<%- include('includes/head.ejs') %>

</head>

<body>
    <main class="scoreboard-container">
      <div class="scoreboard">
        <h1>Top 10</h1>
        <table>
          <tr>
            <th>Rank</th>
            <th>Name</th>
            <th>Score</th>
          </tr>
          <% data.forEach((player, index) => { %>
            <tr>
               <td><%= index+1 %> </td>
               <td><%= player.name %></td>
               <td><%= player.score %></td>
            </tr>
           <% }) %>
        </table>
        <% if (yourScore) { %>
          <div class="your-score">
            <p class="your-score-text">your score:</p>
            <p class="your-score-value"><%= yourScore %> </p>
          </div>
        <% } %>
        
        
        <input
          type="image"
          src="/assets/RestartButton.png"
          class="restart-button"
          onclick="window.location.replace('/')"
        />
      </div>
    </main>

<%- include('includes/end.ejs') %>


